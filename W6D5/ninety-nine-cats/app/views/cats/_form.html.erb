<% if action == :edit %>
    <% action_url = cat_url(cat) %>
<% else %>
    <% action_url = cats_url %>
<% end %>

<form action = "<%=action_url%>", method = 'POST'>
    <% if action == :edit %>
        <input type="hidden" name= '_method' value = "PATCH" >
    <% end %>

    <label>Name :
        <input type='text' name=cat[name] value=<%=cat.name%> >
    </label>
    <br>

    <label>Sex :
        <input type='radio' name=cat[sex] value ="M">Male
        <input type='radio' name=cat[sex] value ="F">Female
    </label>
    <br>
    <label>Color :
        <select name="cat[color]">
            <option value = "blank" selected>--select a color-- 
            <% COLORS.each do |color| %>
                <option value = "<%=color%>"><%=color%></option>
            <%end%>
        </select>
    </label>
    <br>
    <label>Birthdate: 
    <input type="date"  name="cat[birth_date]" value=<%=cat.birth_date%>>
    </label>
    <br>
    <label>Description :
        <textarea name="cat[description]"><%=cat.description%></textarea>
    </label>
    <br>
    <input type='submit' value='<%= action == :edit ? "Update cat!" : "Create cat!"%>'>
</form>