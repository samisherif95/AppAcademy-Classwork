<form action = "<%=action_url%>", method = 'POST'>
    <label>Cat :
        <select name="cat_rental_request[cat_id]">
            <option value = "blank" selected>--select a cat-- 
            <% cats.each do |cat| %>
                <option value = "<%=cat.id%>"><%=cat.name%></option>
            <%end%>
        </select>
    </label>
    <br>
    <label>Start Date: 
    <input type="date"  name="cat_rental_request[start_date]" value=<%=cat_rental_request.start_date%>>
    </label>
    <br>
    <label>End Date: 
    <input type="date"  name="cat_rental_request[end_date]" value=<%=cat_rental_request.end_date%>>
    </label>
    <br>
    <input type='submit' value='Reserve Cat!'>
</form>